<form method="post">
    <div class="uk-margin-bottom">
        <label class="uk-form-label required">Titel</label>
        <input type="text" name="title" class="uk-input" required="required" value="{{ category.title ?:'' }}">
    </div>

    <div class="uk-margin-bottom">
        <label class="uk-form-label">
            Beschreibung
            <input type="text" name="description" class="uk-input" value="{{ category.description ?:'' }}">
        </label>
    </div>

    <div class="uk-margin-bottom">
        <label class="uk-form-label">Ãœbergeordnete Kategorie</label>
        <select class="uk-select" name="parent">
            <option value="0">ohne</option>
            {% for option in categories %}
                {% if option.id == category.parent %}
                    {% set selected = 'selected="selected"' %}
                    {% else %}
                        {% set selected = '' %}
                {% endif %}
                <option value="{{ option.id }}" {{ selected }}>{{ option.title }}</option>
            {% endfor %}
        </select>
    </div>

    <input type="hidden" name="csrf_token" value="{{ session.get('csrf_token') }}">

    <button type="submit" class="uk-button uk-button-default uk-margin-bottom">{{ button|default('Speichern') }}</button>
</form>