{% extends 'base.html.twig' %}

{% block body %}
    <div class="uk-padding">
        {{ flash.show|raw }}
        <h1 class="">{{ controller_name }}</h1>

        <div class="uk-flex uk-flex-left">
            <a href="{{ link('base/new') }}" class="uk-button uk-button-default">Neue Kategorie</a>
            <form method="post">
                <input type="hidden" name="csrf_token" value="{{ session.get('csrf_token') }}">
                <input type="hidden" name="item" value="category">
                <button type="submit" name="action" value="truncate" class="uk-button uk-button-danger">Tabelle leeren</button>
            </form>
        </div>

        <table class="uk-table uk-table-hover uk-table-small">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Meta</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.meta }}</td>
                    <td>
                        <div class="uk-flex uk-flex-left">
                            <form method="post">
                                <input type="hidden" name="csrf_token" value="{{ session.get('csrf_token') }}">
                                <input type="hidden" name="item" value="{{ category.id }}">
                                <button type="submit" name="action" value="remove" class="uk-button uk-button-small uk-button-danger">Eintrag l√∂schen</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}